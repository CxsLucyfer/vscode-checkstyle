{
    "name": "vscode-checkstyle",
    "description": "Checkstyle for Visual Studio Code",
    "author": "Sheng Chen",
    "license": "MIT",
    "version": "0.0.3",
    "publisher": "shengchen",
    "icon": "resources/icon_checkstyle.png",
    "homepage": "https://github.com/jdneo/vscode-checkstyle/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/jdneo/vscode-checkstyle"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:java"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "checkstyle.checkCodeWithCheckstyle",
                "title": "Check code with Checkstyle",
                "category": "Checkstyle"
            },
            {
                "command": "checkstyle.setJarPath",
                "title": "Set Checkstyle jar file path",
                "category": "Checkstyle"
            },
            {
                "command": "checkstyle.setConfigPath",
                "title": "Set Checkstyle configuration file path",
                "category": "Checkstyle"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "checkstyle.checkCodeWithCheckstyle",
                    "when": "resourceExtname == .java"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Checkstyle configuration",
            "properties": {
                "checkstyle.enable": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Specify the enable/disable status of checkstyle extension."
                },
                "checkstyle.jarPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The *.jar file path of the checkstyle jar."
                },
                "checkstyle.configPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The xml file path of the checkstyle rule file."
                },
                "checkstyle.propertiesPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The properties file path of the checkstyle."
                },
                "checkstyle.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode": "^1.1.5",
        "vscode-azureextensionui": "^0.3.0",
        "vscode-languageclient": "^3.4.2"
    }
}
