{
    "name": "vscode-checkstyle",
    "description": "Checkstyle for Visual Studio Code",
    "author": "Sheng Chen",
    "license": "MIT",
    "version": "0.0.1",
    "publisher": "shengchen",
    "repository": {
        "type": "git",
        "url": "https://github.com/jdneo/vscode-checkstyle"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:java"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Checkstyle configuration",
            "properties": {
                "checkstyle.jarPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The *.jar file path of the checkstyle jar."
                },
                "checkstyle.configPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The xml.jar file path of the checkstyle rule file."
                },
                "checkstyle.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode": "^1.1.5",
        "vscode-languageclient": "^3.4.2"
    }
}
